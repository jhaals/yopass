{
  "name": "yopass",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "ci": "start-server-and-test start http://localhost:3000 cy:run",
    "cypress": "cypress open",
    "cy:run": "cypress run",
    "eject": "react-scripts eject",
    "format": "prettier --ignore-path .gitignore --check --write .",
    "lint": "prettier --ignore-path .gitignore --check .",
    "playwright-ci": "start-server-and-test 'yarn start-server' http://localhost:3000 'yarn playwright-test'",
    "start-server": "REACT_APP_BACKEND_URL='http://localhost:1337' yarn start",
    "start": "react-scripts start",
    "test": "cypress test",
    "playwright-test": "cd playwright && npx playwright test"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@material-ui/core": "^5.0.0-alpha.27",
    "file-saver": "^2.0.5",
    "i18next": "^20.3.5",
    "i18next-http-backend": "^1.3.0",
    "oidc-react": "^1.5.1",
    "openpgp": "^4.10.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-hook-form": "^6.15.8",
    "react-i18next": "^11.11.4",
    "react-router-dom": "^5.2.1",
    "react-scripts": "^4.0.3",
    "react-use": "^17.2.4",
    "swr": "^0.5.6",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@playwright/test": "^1.14.1",
    "@types/file-saver": "^2.0.3",
    "@types/jest": "^27.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.6",
    "@types/openpgp": "^4.4.17",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-dropzone": "^5.1.0",
    "@types/react-router-dom": "^5.1.8",
    "cypress": "^8.3.1",
    "cypress-file-upload": "^5.0.8",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-import": "^2.24.2",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.13.1",
    "typescript": "^4.3.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:import/errors",
      "plugin:import/typescript",
      "plugin:cypress/recommended"
    ],
    "rules": {
      "import/no-namespace": [
        "error"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
